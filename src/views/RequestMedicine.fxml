<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.RequestMedicineController"
            stylesheets="@../resource/requestmedicine.css">

    <!-- MAIN WRAPPER -->
    <children>

        <!-- Centering Container -->
        <VBox spacing="20" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="180"
              alignment="TOP_CENTER">

            <!-- Page Title -->
            <Label text="Request Medicine" styleClass="page-header">
                <font><Font size="26" /></font>
            </Label>

            <!-- Card (Responsive) -->
            <VBox styleClass="card" spacing="18" maxWidth="820">
                <padding><Insets top="20" bottom="20" left="20" right="20"/></padding>

                <!-- FORM GRID -->
                <GridPane hgap="20" vgap="16" styleClass="form-grid">
                    <columnConstraints>
                        <ColumnConstraints minWidth="150" halignment="RIGHT"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>

                    <!-- Medicine Name -->
                    <Label text="Medicine Name:" styleClass="form-label"
                           GridPane.rowIndex="0" GridPane.columnIndex="0"/>

                    <TextField fx:id="medicineNameField"
                               promptText="Search or enter medicine name..."
                               styleClass="input-field"
                               GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <!-- Quantity -->
                    <Label text="Quantity:" styleClass="form-label"
                           GridPane.rowIndex="1" GridPane.columnIndex="0"/>

                    <HBox spacing="10" GridPane.rowIndex="1" GridPane.columnIndex="1">
                        <children>
                            <Button fx:id="btnMinus" text="âˆ’" onAction="#decreaseQuantity"
                                    styleClass="qty-button"/>
                            <TextField fx:id="quantityField" text="1"
                                       prefWidth="80" styleClass="qty-field"/>
                            <Button fx:id="btnPlus" text="+" onAction="#increaseQuantity"
                                    styleClass="qty-button"/>
                        </children>
                    </HBox>

                    <!-- Requested By -->
                    <Label text="Requested By:" styleClass="form-label"
                           GridPane.rowIndex="2" GridPane.columnIndex="0"/>

                    <TextField fx:id="requestedByField"
                               promptText="Enter requester name..."
                               styleClass="input-field"
                               GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <!-- Requested From -->
                    <Label text="Requested From:" styleClass="form-label"
                           GridPane.rowIndex="3" GridPane.columnIndex="0"/>

                    <TextField fx:id="requestedFromField"
                               promptText="Your department or username..."
                               styleClass="input-field"
                               GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <!-- Remarks -->
                    <Label text="Remarks:" styleClass="form-label"
                           GridPane.rowIndex="4" GridPane.columnIndex="0"/>

                    <TextArea fx:id="remarksArea"
                              promptText="Add notes (optional)"
                              prefRowCount="4"
                              styleClass="text-area"
                              GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                </GridPane>

                <!-- BUTTONS -->
                <HBox spacing="14" alignment="CENTER">
                    <children>
                        <Button fx:id="btnSubmitRequest"
                                text="Submit Request"
                                onAction="#handleSubmitRequest"
                                styleClass="btn-primary"/>
                        <Button fx:id="btnClear" text="Clear"
                                onAction="#handleClearForm"
                                styleClass="btn-secondary"/>
                    </children>
                </HBox>

            </VBox>
        </VBox>

        <!-- FOOTER -->
        <Pane prefHeight="160" style="-fx-background-color: #33357A;"
              AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"/>
    </children>

</AnchorPane>
