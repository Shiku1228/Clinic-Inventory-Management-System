<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="750" prefWidth="1200" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="controllers.TransactionsController">

    <VBox spacing="15" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">

        <!-- Header -->
        <VBox>
            <Label styleClass="title" text="Transactions" />
            <Label styleClass="subtitle" text="View all inventory movements in the clinic." />
        </VBox>

        <!-- Summary Cards -->
        <HBox spacing="20">
            <VBox styleClass="stat-card">
                <Label styleClass="stat-number" text="48" />
                <Label text="Total Transactions Today" />
            </VBox>
            <VBox styleClass="stat-card">
                <Label styleClass="stat-number" text="120" />
                <Label text="Items Received" />
            </VBox>
            <VBox styleClass="stat-card">
                <Label styleClass="stat-number" text="85" />
                <Label text="Items Issued" />
            </VBox>
            <VBox styleClass="stat-card">
                <Label styleClass="stat-number" text="3" />
                <Label text="Expired Items" />
            </VBox>
        </HBox>

        <!-- Search Bar -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <TextField fx:id="searchField" promptText="Search transaction..." HBox.hgrow="ALWAYS" />
            <Button onAction="#handleSearch" text="&gt;" />
            <Button text="âš™" />
        </HBox>

        <!-- Table Section -->
        <VBox spacing="10" styleClass="table-container">

            <ComboBox fx:id="filterCombo" prefWidth="150" />

            <TableView fx:id="transactionTable" prefHeight="350">
                <columns>
                    <TableColumn fx:id="colDate" prefWidth="150" text="Date and Time" />
                    <TableColumn fx:id="colItem" prefWidth="150" text="Item Name" />
                    <TableColumn fx:id="colType" prefWidth="100" text="Type" />
                    <TableColumn fx:id="colQuantity" prefWidth="80" text="Quantity" />
                    <TableColumn fx:id="colPerformedBy" prefWidth="150" text="Performed By" />
                    <TableColumn fx:id="colRemarks" prefWidth="200" text="Remarks" />
                    <TableColumn fx:id="colAction" prefWidth="80" text="Action" />
                </columns>
            </TableView>

            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Button onAction="#handleAddTransaction" text="Add Transaction" />
                <Button onAction="#handleRefresh" text="Refresh" />
            </HBox>
        </VBox>

        <!-- Export Buttons -->
        <HBox alignment="CENTER" spacing="15">
            <Button text="Export as CSV" />
            <Button text="Export as PDF" />
            <Button text="Print" />
        </HBox>

    </VBox>
   <stylesheets>
      <URL value="@transactions.css" />
      <URL value="@../resource/transactions.css" />
   </stylesheets>
</AnchorPane>
