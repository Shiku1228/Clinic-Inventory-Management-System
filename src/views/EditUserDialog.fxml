<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="380" prefWidth="400"
            style="-fx-background-radius: 20; -fx-border-radius: 20;"
            stylesheets="@../resource/additemdialog.css"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.EditUserDialogController">

    <VBox alignment="CENTER"
          spacing="15"
          styleClass="dialog-card"
          AnchorPane.topAnchor="0"
          AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0">

        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <Label text="Edit User" styleClass="dialog-title"/>

        <GridPane hgap="10" vgap="12">
            <columnConstraints>
                <ColumnConstraints percentWidth="35"/>
                <ColumnConstraints percentWidth="65"/>
            </columnConstraints>

            <Label text="Name:"/>
            <TextField fx:id="nameField"
                       styleClass="text-field"
                       GridPane.columnIndex="1"/>

            <Label text="Role:" GridPane.rowIndex="1"/>
            <ComboBox fx:id="roleBox"
                      styleClass="combo-box"
                      maxWidth="1.7976931348623157E308"
                      GridPane.columnIndex="1"
                      GridPane.rowIndex="1"/>

            <Label text="Contact No.:" GridPane.rowIndex="2"/>
            <TextField fx:id="contactField"
                       styleClass="text-field"
                       GridPane.columnIndex="1"
                       GridPane.rowIndex="2"/>

            <Label text="Email:" GridPane.rowIndex="3"/>
            <TextField fx:id="emailField"
                       styleClass="text-field"
                       GridPane.columnIndex="1"
                       GridPane.rowIndex="3"/>

            <Label text="Status:" GridPane.rowIndex="4"/>
            <ComboBox fx:id="statusBox"
                      styleClass="combo-box"
                      maxWidth="1.7976931348623157E308"
                      GridPane.columnIndex="1"
                      GridPane.rowIndex="4"/>

            <rowConstraints>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
                <RowConstraints/>
            </rowConstraints>
        </GridPane>

        <VBox alignment="CENTER" spacing="10">
            <Button fx:id="saveButton"
                    maxWidth="Infinity"
                    onAction="#handleSave"
                    styleClass="primary-btn"
                    text="SAVE"/>

            <Button fx:id="cancelButton"
                    maxWidth="Infinity"
                    onAction="#handleCancel"
                    styleClass="secondary-btn"
                    text="CANCEL"/>
        </VBox>

    </VBox>
</AnchorPane>
